<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dinner"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <!-- Titre "Favorites" -->
    <TextView
        android:id="@+id/favoritesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="Recipes"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Carte 1 : Chorizo & mozzarella gnocchi bake -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/images"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/images"
            android:contentDescription="Recipe Image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/recipeTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chorizo and mozzarella gnocchi bake"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDetails1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="350 Kcal | 45 min"
                android:textSize="14sp"
                android:textColor="#777777" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/favoriteButton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/images"
            android:contentDescription="Favorite Button"
            android:background="?android:attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Carte 2 : Huevos Rancheros -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/images"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/images"
            android:contentDescription="Recipe Image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/recipeTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huevos Rancheros"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipeDetails2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125 Kcal | 20 min"
                android:textSize="14sp"
                android:textColor="#777777" />
        </LinearLayout>

    </LinearLayout>

    <!-- Boutons en bas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"/>

</LinearLayout>
